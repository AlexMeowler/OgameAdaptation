<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <property name="tableName" value="building_order" global="false"/>

    <changeSet id="1" author="alexMeowler">
        <createTable tableName="${tableName}">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="building_instance_id" type="BIGINT">
                <constraints nullable="false" references="building_instance(id)" foreignKeyName="fk_building_instance"/>
            </column>
            <column name="order_value" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="duration" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="finished_at" type="TIMESTAMP"/>
            <column name="status" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <sql>ALTER TABLE building_order ADD CONSTRAINT bo_test_status CHECK (status in ('created', 'started'))</sql>
        <addUniqueConstraint tableName="${tableName}" columnNames="building_instance_id, order_value"/>
    </changeSet>

</databaseChangeLog>