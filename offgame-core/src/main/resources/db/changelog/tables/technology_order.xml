<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <property name="tableName" value="technology_order" global="false"/>

    <changeSet id="1" author="alexMeowler">
        <createTable tableName="${tableName}">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="technology_instance_id" type="BIGINT">
                <constraints unique="true" nullable="false" references="technology_instance(id)" foreignKeyName="fk_order_technology_instance"/>
            </column>
            <column name="planet_id" type="BIGINT">
                <constraints unique="true" nullable="false" references="planet(id)" foreignKeyName="fk_technology_order_planet"/>
            </column>
            <column name="finished_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>