    <changeSet id="1" author="alexMeowler">
        <createTable tableName="${tableName}">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="building_id" type="BIGINT">
                <constraints references="building(id)" foreignKeyName="fk_building_requirement"/>
            </column>
            <column name="technology_id" type="BIGINT">
                <constraints references="technology(id)" foreignKeyName="fk_technology_requirement"/>
            </column>
            <column name="required_building_id" type="BIGINT">
