            </column>
            <column name="required_technology_id" type="BIGINT">
                <constraints references="technology(id)" foreignKeyName="fk_required_technology_requirement"/>
            </column>
            <column name="required_level" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <sql>
            ALTER TABLE requirement
                ADD CONSTRAINT test_mutual_exclusive_requirements_columns CHECK (
                    (building_id IS NOT NULL) != (technology_id IS NOT NULL)
                AND (required_building_id IS NOT NULL) != (required_technology_id IS NOT NULL)
                )
        </sql>
    </changeSet>

