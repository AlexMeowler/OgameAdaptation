<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <property name="tableName" value="users" global="false"/>
    <!--  this is changeset for foreign keys that can not be initialized during table declaration,
            i.e. table A has FK A->B but changeset for table B hasn't been executed yet)  -->
    <changeSet id="1" author="alexMeowler">
        <addForeignKeyConstraint baseTableName="${tableName}"
                                 baseColumnNames="active_planet_id"
                                 constraintName="fk_active_planet_id"
                                 referencedTableName="planet"
                                 referencedColumnNames="id"
                                 validate="true"/>
    </changeSet>

</databaseChangeLog>